<h1>Listing locations</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Latitude</th>
    <th>Longitude</th>
  </tr>

<% for locations in @locations %>
  <tr>
    <td><%=h locations.name %></td>
    <td><%=h locations.latitude %></td>
    <td><%=h locations.longitude %></td>
    <td><%= link_to 'Show', locations %></td>
    <td><%= link_to 'Edit', edit_locations_path(locations) %></td>
    <td><%= link_to 'Destroy', locations, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New locations', new_locations_path %>
